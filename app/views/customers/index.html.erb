<% @page_title= "Customer Records" %>
<h1><%= @page_title %></h1>

<div class="container">
  <%= form_tag(customers_search_path, :method => "get") do %>
    <div class="form-group">
      <%= label_tag("q","Search : ") %>
      <%= text_field_tag "q", nil, placeholder:"Search customers", class: "form-control w-25" %>
      <%= submit_tag("Search Customer", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>

<% if Customer.count!=0 %>
  <table class="table">
    <thead>
      <tr>
      <% Customer.column_names.each do |column_name| %>
        <th><%= column_name %></th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% @customer.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><%= c.email %></td>
          <td><%= link_to "View", customer_path(c) %></td>
          <td><%= link_to "Edit", edit_customer_path(c) %></td>
          <td><%= link_to "Delete", customer_path(c), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div>
  <%= link_to "Add New Customer", new_customer_path, class: "btn btn-success" %>
</div>
<div>
  <%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>