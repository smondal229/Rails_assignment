<% @page_title= "Add New Image" %>
<h1><%= @page_title %></h1>

<%= form_for @image , url: images_create_path, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :img_name, "Title" %>
    <%= f.text_field :img_name, placeholder:"Give a Title here", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post, "Upload Image" %><br/>
    <%= f.file_field :post  %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success"  %>
  </div>
<% end %>
<div>
  <%= link_to(root_path, class: "btn btn-primary") do %>
    <span>Back</span>
  <% end %>
</div>