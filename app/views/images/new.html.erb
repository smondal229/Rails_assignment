<% @page_title= "Add New Image" %>
<h1><%= @page_title %></h1>

<%= form_for @image, html: {multipart: true}  do |f| %>
  
  <%= render(partial: "shared/error_messages", locals: { target: @image }) %>

  <div class="form-group form-inline">
    <%= f.label :img_name, "Title" %>
    <%= f.text_field :img_name, placeholder:"Give a Title here", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :post, "Upload Image" %><br/>
    <%= f.file_field :post  %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success"  %>
  </div>
<% end %>

<div>
  <%= link_to("Back",root_path, class: "btn btn-primary") %>
</div>