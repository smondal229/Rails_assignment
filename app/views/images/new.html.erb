<h1>Add New Image</h1>
<% if flash[:notice] %>
<div class="text-warning">
  <%= flash[:notice]%>
</div>
<% end %>
<%= form_for @image , url: images_create_path, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :img_name, "Title" %>
    <%= f.text_field :img_name, placeholder:"Give a Title here", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post, "Upload Image" %><br/>
    <%= f.file_field :post  %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success"  %>
  </div>
<% end %>

<%= link_to "Back", root_path %>