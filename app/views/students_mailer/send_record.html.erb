<h1>Student records</h1>
<table class="table">
  <thead>
    <tr>
      <% Student.column_names.each do |col| %>
        <th><%= col %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% Student.order(:names).limit(50) do |student| %>
      <tr>
        <% student.attributes.values.each do |val| %>
          <td><%= val %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
